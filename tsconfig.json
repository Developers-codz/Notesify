{
  "compilerOptions":
   {
    "target": "es2016",
    "baseUrl": "src",                                 
    /* Modules */
    "module": "commonjs",                          
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,        
    /* Type Checking */
    "strict": true,                                
       "skipLibCheck": true                               
  },
   "exclude": ["node_modules", "build"],
   "include": ["src"]
}
